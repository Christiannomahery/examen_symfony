{% extends 'base.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du produit</h1>

    <table class="table table-bordered table-striped table-hover">
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th scope="row">Prix</th>
                <td>{{ product.prix|number_format(2, ',', ' ') }} €</td>
            </tr>
            <tr>
                <th scope="row">Catégorie</th>
                <td>{{ product.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
